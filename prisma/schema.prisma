generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Team{
  id  Int @default(autoincrement())@id
  identifier String
  users User[]
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  password String
  name  String?
  role  String
  tasks Task[]
  teamId Int
  team Team  @relation(fields: [teamId], references: [id])
}

model Task {
  id        Int      @default(autoincrement()) @id
  title     String
  description   String?
  priority String?
  status String
  user    User?    @relation(fields: [userId], references: [id])
  userId  Int?
}